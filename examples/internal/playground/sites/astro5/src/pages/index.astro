---
import Welcome from '../components/Welcome.astro';
import Layout from '../layouts/Layout.astro';

const base = import.meta.env.BASE_URL;
---

<Layout>
  <ul>
    <li><a href={base + '/server-rendered'}>A server rendered page</a></li>
    <li><a href={base + '/prerendered'}>A prerendered page</a></li>
    <li><a href={base + '/sub/page'}>A prerendered page inside /sub</a></li>
    <li><a href={base + '/action'}>This page uses actions</a></li>
    <li><a href={base + '/src-image'}>This page display image in src/</a></li>
    <li><a href={base + '/public-image'}>This page display image in public/</a></li>
    <li><a href={base + '/remote-image'}>This page display image from remote url</a></li>
    <li><a href={base + '/error'}>This page throw an error (500 page is server rendered)</a></li>
    <li><a href={base + '/garbage'}>This page does not exist (404 page is prerendered)</a></li>
    <li><a href={base + '/redirect-to-route'}>Redirect /redirect-to-route to /prerendered</a></li>
    <li><a href={base + '/redirect-to-url'}>Redirect /redirect-to-url to https://www.google.com</a></li>
    <li><a href={base + '/redirect/page'}>Redirect /redirect/page to /sub/page</a></li>
    <li><a href={base + '/dynamic-redirect'}>Dynamically redirect /dynamic-redirect to /prerendered</a></li>
  </ul>
	<Welcome />
</Layout>
